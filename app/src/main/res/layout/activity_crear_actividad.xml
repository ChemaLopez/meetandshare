<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".actividades.CrearActividadActivity">


    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="cursive"
        android:gravity="center"
        android:padding="5sp"
        android:text="@string/app_name"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="42sp"
        android:textStyle="bold|italic"
        android:typeface="normal" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        >

        <LinearLayout
            android:id="@+id/registro_login_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <!-- NOMBRE-->


            <TextView
                android:id="@+id/NombreLabel"
                style="@style/CodeFont"
                android:layout_marginTop="10sp"
                android:text="@string/nombre"
                android:textSize="24sp" />


            <AutoCompleteTextView
                android:id="@+id/nombreRegistro"
                style="@style/CodeFont"
                android:layout_marginBottom="10sp"
                android:hint="@string/nombre"
                android:inputType="textAutoComplete"

                android:maxLines="1"
                android:singleLine="true" />


            <!-- FECHA NACIMIENTO-->
            <TextView
                android:id="@+id/FechaInicioLabel"
                style="@style/CodeFont"

                android:layout_marginBottom="0dp"
                android:text="@string/fechaInicio"
                android:textSize="24sp" />

            <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_mostrar_fecha_picker"
                        style="@style/CodeFont"
                        android:ems="10"
                        android:hint="@string/formato_fecha"
                        android:inputType="date"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <ImageButton
                        android:id="@+id/ib_obtener_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_date_range_black_24dp"
                        app:layout_constraintLeft_toRightOf="@+id/et_mostrar_fecha_picker"
                        tools:ignore="ContentDescription" />


                </android.support.constraint.ConstraintLayout>

                <EditText
                    android:id="@+id/et_mostrar_fecha_picker"
                    style="@style/CodeFont"
                    android:ems="10"
                    android:hint="@string/formato_fecha"
                    android:inputType="date"
                    app:layout_constraintLeft_toLeftOf="parent" />


                <ImageButton
                    android:id="@+id/ib_obtener_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_date_range_black_24dp"
                    app:layout_constraintLeft_toRightOf="@+id/et_mostrar_fecha_picker"
                    tools:ignore="ContentDescription" />


            </android.support.constraint.ConstraintLayout>


            <!-- EMAIL-->


            <TextView
                android:id="@+id/fechaFinLabel"
                style="@style/CodeFont"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="@string/fechaFin"
                android:textSize="24sp" />

            <android.support.constraint.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.constraint.ConstraintLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/et_mostrar_fecha_picker"
                        style="@style/CodeFont"
                        android:ems="10"
                        android:hint="@string/formato_fecha"
                        android:inputType="date"
                        app:layout_constraintLeft_toLeftOf="parent" />


                    <ImageButton
                        android:id="@+id/ib_obtener_fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_date_range_black_24dp"
                        app:layout_constraintLeft_toRightOf="@+id/et_mostrar_fecha_picker"
                        tools:ignore="ContentDescription" />


                </android.support.constraint.ConstraintLayout>

                <EditText
                    android:id="@+id/et_mostrar_fecha_picker"
                    style="@style/CodeFont"
                    android:ems="10"
                    android:hint="@string/formato_fecha"
                    android:inputType="date"
                    app:layout_constraintLeft_toLeftOf="parent" />


                <ImageButton
                    android:id="@+id/ib_obtener_fecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:backgroundTint="@color/colorPrimary"
                    android:src="@drawable/ic_date_range_black_24dp"
                    app:layout_constraintLeft_toRightOf="@+id/et_mostrar_fecha_picker"
                    tools:ignore="ContentDescription" />


            </android.support.constraint.ConstraintLayout>


            <!-- PASSWORD-->


            <!-- PASSWORD CONFIRMATION-->


            <!-- INTERESES-->


            <TextView
                android:id="@+id/labelNumParticipantes"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/num_participantes"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/NumParticipantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/num_participantes"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/line_input" />

            <TextView
                android:id="@+id/labelInteres"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/intereses"
                android:textSize="24sp" />

            <Button
                android:id="@+id/botonSeleccionarCategorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/selecciona" />

            <!-- BOTON REGISTRO-->


            <TextView
                android:id="@+id/labelUbicacion"
                style="@style/CodeFont"
                android:layout_marginTop="12sp"
                android:text="@string/ubicacion"
                android:textSize="24sp" />

            <Button
                android:id="@+id/botonSeleccionarUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/seleccionar_ubicacion" />

            <Button
                android:id="@+id/crearActividadPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:ems="10"
                android:text="@string/crear_actividad"
                android:textStyle="bold"

                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
