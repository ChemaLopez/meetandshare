<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".actividades.CrearActividadFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/registro_login_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/CrearActividadTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CrearActividadTitle"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_dark" />

            <!-- NOMBRE-->
            <TextView
                android:id="@+id/NombreLabel"
                style="@style/CodeFont"
                android:layout_marginTop="10sp"
                android:text="@string/nombre" />


            <AutoCompleteTextView
                android:id="@+id/nombreRegistro"
                style="@style/CodeFont"
                android:layout_marginBottom="10sp"
                android:hint="@string/nombre"
                android:inputType="textAutoComplete"

                android:maxLines="1"
                android:singleLine="true"
                android:textColorLink="@color/colorPrimary" />


            <!-- FECHAS -->
            <TextView
                android:id="@+id/FechaInicioLabel"
                style="@style/CodeFont"

                android:layout_marginBottom="0dp"
                android:text="@string/fechaInicio" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputFechaIni"
                    style="@style/CodeFont"
                    android:layout_width="333dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/formato_fecha"
                    android:inputType="date"
                    android:textColorLink="@color/colorPrimary" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutFechaIni"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <ImageButton
                        android:id="@+id/ib_obtener_fechaIni"
                        app:layout_constraintLeft_toRightOf="@+id/inputFechaIni"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_date_range_black_24dp"
                        tools:ignore="ContentDescription"
                        tools:layout_editor_absoluteX="0dp"
                        tools:layout_editor_absoluteY="0dp" />


                </android.support.constraint.ConstraintLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/fechaFinLabel"
                style="@style/CodeFont"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:text="@string/fechaFin" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputFechaFin"
                    style="@style/CodeFont"
                    android:layout_width="333dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/formato_fecha"
                    android:inputType="date"
                    android:textColorLink="@color/colorPrimary"
                    app:layout_constraintLeft_toLeftOf="parent" />

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/layoutFechaFin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">


                    <ImageButton
                        android:id="@+id/ib_obtener_fechaFin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/ic_date_range_black_24dp"
                        app:layout_constraintLeft_toRightOf="@+id/inputFechaFin"
                        tools:ignore="ContentDescription"
                        tools:layout_editor_absoluteY="0dp" />
                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/labelNumParticipantes"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/num_participantes" />

            <EditText
                android:id="@+id/editText"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/num_participantes"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorLink="@color/colorPrimary" />

            <TextView
                android:id="@+id/labelInteres"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/intereses" />

            <Button
                android:id="@+id/botonInteresRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/selecciona" />
            <!--
            <com.allyants.chipview.ChipView
                android:id="@+id/cvTag"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            -->

            <TextView
                android:id="@+id/labelUbicacion"
                style="@style/CodeFont"
                android:layout_marginTop="12sp"
                android:text="@string/ubicacion" />

            <Button
                android:id="@+id/botonSeleccionarUbicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="@string/seleccionar_ubicacion" />

            <TextView
                android:id="@+id/labelDescripcion"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="10sp"
                android:text="@string/descripcion" />

            <EditText
                android:id="@+id/Descripcion"
                style="@style/CodeFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/descripcionMsg"
                android:inputType="textMultiLine"
                android:maxLines="35"
                android:textColorLink="@color/colorPrimary" />

            <Button
                android:id="@+id/crearActividadPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:background="@color/colorPrimaryDark"
                android:ems="10"
                android:text="@string/crear_actividad"
                android:textStyle="bold"

                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>