<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.fragments.LeyendaMapaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/colorAccent">

        <LinearLayout
            android:id="@+id/leyenda_mapa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50px"
            android:orientation="vertical"
            android:paddingBottom="50px">

            <TextView
                android:id="@+id/LeyendaMapaTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LeyendaMapaTitle"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimaryDark"
                android:paddingBottom="1dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="1dp"
                android:scaleType="fitXY"
                android:src="@android:drawable/divider_horizontal_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/imgView_admin"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:tint="@color/colorPurple" />

                <TextView
                    style="@style/CodeFont"
                    android:text="@string/actAdminColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/imgView_inscrito"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:tint="@color/colorBlue" />

                <TextView
                    style="@style/CodeFont"
                    android:text="@string/actUsuarioInscritoColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/imgView_oneDay"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:tint="@color/colorYellow" />

                <TextView
                    style="@style/CodeFont"
                    android:text="@string/actInicioInminenteColor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="26dp"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/imgView_others"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:src="@android:drawable/ic_dialog_map"
                    android:tint="@color/colorRed" />

                <TextView
                    style="@style/CodeFont"
                    android:text="@string/actOtrosUsuariosColor" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>